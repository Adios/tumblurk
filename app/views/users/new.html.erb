<% content_for :head do %>
<%= stylesheet_link_tag 'users/new' %>
<% end %>

<% form_for @user do |f| %>
	<div id="splash">
	Make a new account!
	</div>
	
	<div style="font-size: 50%;">
		<%= f.error_messages :header_message => 'Oops!', :message => nil %>
	</div>

	<div id="content">
		<div>
			<label class="left" for="user_login">Login</label>
			<%= f.text_field :login, :size => 32, :class => 'right' %>
		</div>
		<div class="clear"></div>
		
		<div style="margin-top: 0.6em;">
			<label class="left" for="user_email">Email</label>
			<%= f.text_field :email, :size => 128, :class => 'right' %>
		</div>
		<div class="clear"></div>
		
		<div style="margin-top: 0.6em;">
			<label class="left" for="user_password">Password</label>
			<%= f.password_field :password, :size => 128, :class => 'right' %>
		</div>
		<div class="clear"></div>
		
		<div style="margin-top: 0.6em;">
			<label class="left" for="user_password_confirmation">Again</label>
			<%= f.password_field :password_confirmation, :size => 128, :class => 'right' %>
		</div>
		<div class="clear"></div>
		
		<div class="right" style="margin-top: 0.6em;">
		<%= f.submit 'Create' %>
		</div>
		
		<div class="clear"></div>
	</div>
<% end %>