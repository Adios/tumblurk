<% content_for :head do %>
	<%= stylesheet_link_tag 'dashboard/main' %>
<% end %>

<div id="sidebar" class="left">
	<h2>followings</h2>
	<ul>
		<%= render :partial => 'following', :collection => @current_user.followings %>
	</ul>
	
	<h2>blogs</h2>
	<ul>
		<%= render :partial => 'blog', :collection => @blogs %>
	</ul>

	<h2><%= link_to 'create another blog', new_blog_path %></h2>

	<% if flash[:message] or flash[:notice] or flash[:error] %>
	<h2>status</h2>
	<div id="errorExplanation" style="font-size: 80%; margin: 0 0.5em; width: 95%;">
		<%= flash[:message] %>
		<%= flash[:error] %>
		<%= flash[:notice] %>
	</div>
	<% end %>
	



</div>

<div id="content" class="right">
	<div id="infobar">
	make a post of <%= render :partial => 'type', :collection => Post.kinds %>
	</div>
	
	<%= render :partial => 'post', :collection => @posts, :spacer_template => 'spacer' %>
</div>

<div class="clear"></div>

