<% content_for :head do %>
	<%= stylesheet_link_tag 'dashboard/main' %>
<% end %>

<div id="sidebar" class="left">
	<h2>blogs</h2>
	<ul>
	<% @blogs.each do |blog| %>
		<li><%= link_to blog.name, blog_path(blog.name), :target => '_blank' %></li>
	<% end %>
	</ul>
	<h2><%= link_to 'create another one', new_blog_path %></h2>
</div>

<div id="content" class="right">
	<div id="infobar">
	make a post of <%= render :partial => 'type', :collection => (1 .. 6).to_a %>
	</div>
	
	<%= render :partial => 'post', :collection => @posts, :spacer_template => 'spacer' %>
</div>

<div class="clear"></div>

